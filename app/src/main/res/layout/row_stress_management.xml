<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_stress_management"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/bg_gray_border_transperent"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/image_row_stress_management"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/visualise_manifest"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/tv_row_stress_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/dmsans_regular"
            android:text="Visualise and Manifest"
            android:textColor="@color/txt_color_header"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_row_desc_stress_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/dmsans_regular"
            android:text="Visualise and Manifest"
            android:textColor="@color/txt_color_header"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>