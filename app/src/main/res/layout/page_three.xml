<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Add any content you want for the first page -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/buttoncolorvc"
        android:layout_marginBottom="28dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:visibility="gone"
        android:text="Proceed to Scan" />

    <RelativeLayout
        android:layout_width="320dp"
        android:id="@+id/rl1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:layout_marginTop="60dp"
        android:backgroundTint="#F9DB84"
        android:background="@drawable/roundedcornerbutton"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:background="@drawable/roundedcornerbutton"
            android:paddingStart="10dp"
            android:backgroundTint="@color/buttoncolorvc"
            android:textColor="@color/white"
            android:text="5.Note Your Score"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView1"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_below="@+id/txt1"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/noteyourvoice" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F9DB84"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundedcornerbutton"
        android:layout_below="@+id/rl1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:background="@drawable/roundedcornerbutton"
            android:paddingStart="10dp"
            android:backgroundTint="@color/buttoncolorvc"
            android:textColor="@color/white"
            android:text="6.Reflect and Act"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView2"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_below="@+id/txt2"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/noteyourvoice" />
    </RelativeLayout>

    <RadioButton
        android:layout_width="wrap_content"
        android:text="Don't show this again"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>