<!-- res/layout/bottom_sheet_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/design_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@drawable/toproundedcornershape"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/ivDialogClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/close_dialog_affirmation" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/dmsans_bold"
            android:text="Set Your Reminder"
            android:textColor="@color/txt_color_header"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_below="@+id/titleText">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast"
                android:textColor="@color/txt_color_header"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:fontFamily="@font/dmsans_regular" />

            <LinearLayout
                android:id="@+id/llBreakFastTime"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/bg_rounded_green"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="10dp">

                <!-- Clock Icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clock_affirmation"
                    app:tint="@color/questionnaire_green" />

                <!-- Time Text -->
                <TextView
                    android:id="@+id/tvTimeBreakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="9:00 AM"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_up_down"
                    app:tint="@color/questionnaire_green" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunch"
                android:textColor="@color/txt_color_header"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:fontFamily="@font/dmsans_regular" />

            <LinearLayout
                android:id="@+id/llLunchTime"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/bg_rounded_green"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="10dp">

                <!-- Clock Icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clock_affirmation"
                    app:tint="@color/questionnaire_green" />

                <!-- Time Text -->
                <TextView
                    android:id="@+id/tvTimeLunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="1:00 PM"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_up_down"
                    app:tint="@color/questionnaire_green" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinner"
                android:textColor="@color/txt_color_header"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:fontFamily="@font/dmsans_regular" />

            <LinearLayout
                android:id="@+id/llDinnerTime"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/bg_rounded_green"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="10dp">

                <!-- Clock Icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clock_affirmation"
                    app:tint="@color/questionnaire_green" />

                <!-- Time Text -->
                <TextView
                    android:id="@+id/tvTimeDinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="8:00 PM"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_up_down"
                    app:tint="@color/questionnaire_green" />

            </LinearLayout>

            <Button
                android:id="@+id/btnSetNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:text="Set Now"
                android:textSize="16sp"
                android:fontFamily="@font/dmsans_bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/menuselected" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
