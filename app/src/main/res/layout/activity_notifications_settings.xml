<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

  <ImageView
            android:id="@+id/ic_back_dialog"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_leftarrow" />

        <TextView
            android:id="@+id/tv_header_htw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/dmsans_bold"
            android:text="Notifications"
            android:textSize="@dimen/textsize_medium" />

        <com.zhpan.indicator.IndicatorView
            android:id="@+id/indicator_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_header_htw"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/textsize_medium"
            app:vpi_slide_mode="smooth"
            app:vpi_slider_checked_color="#A0A3BD"
            app:vpi_slider_normal_color="#EFF0F6"
            app:vpi_style="round_rect" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/dmsans_bold"
                android:text="Push Notifications"
                android:textSize="@dimen/textsize_large" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_push_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:track="@drawable/custom_track"
                android:thumb="@drawable/custom_thumb"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/dmsans_regular"
                android:text="Reminder Notifications"
                android:textSize="@dimen/textsize_large" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_reminder_push_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:track="@drawable/custom_track"
                android:thumb="@drawable/custom_thumb"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/dmsans_regular"
                android:text="Marketing Notifications"
                android:textSize="@dimen/textsize_large" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_marketing_push_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:track="@drawable/custom_track"
                android:thumb="@drawable/custom_thumb"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/gray"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/dmsans_bold"
                android:text="Email Notifications"
                android:textSize="@dimen/textsize_large" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_email_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:track="@drawable/custom_track"
                android:thumb="@drawable/custom_thumb"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/dmsans_regular"
                android:text="Reminder Notifications"
                android:textSize="@dimen/textsize_large" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_reminder_email_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:track="@drawable/custom_track"
                android:thumb="@drawable/custom_thumb"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/dmsans_regular"
                android:text="Marketing Notifications"
                android:textSize="@dimen/textsize_large" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_marketing_email_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:track="@drawable/custom_track"
                android:thumb="@drawable/custom_thumb"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/gray"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/dmsans_bold"
                android:text="SMS Notifications"
                android:textSize="@dimen/textsize_large" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_sms_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:track="@drawable/custom_track"
                android:thumb="@drawable/custom_thumb"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>