<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/settings_bg_color">

    <!-- Back Arrow and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAQ"
            android:textSize="18sp"
            android:fontFamily="@font/dmsans_bold"
            android:textColor="@color/txt_color_mind"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How can we help?"
        android:textColor="@color/txt_color_journal_date"
        android:fontFamily="@font/dmsans_bold"
        android:textSize="22sp"
        android:layout_marginStart="4dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="16dp"
            android:fontFamily="@font/dmsans_regular"
            android:text="How can we help?"
            android:textColor="@color/txt_color_journal_date"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:layout_above="@id/writeToUsSection"/>

        <LinearLayout
            android:id="@+id/writeToUsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true">

            <!-- Informative Text -->
            <TextView
                android:id="@+id/writeToUsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color_mind"
                android:textSize="12sp"
                android:textAlignment="center"
                android:lineSpacingExtra="4dp"/>

            <!-- Write To Us Button -->
            <Button
                android:id="@+id/writeToUsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Write To Us"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:backgroundTint="@color/menu_icon_color_selected"
                android:fontFamily="@font/dmsans_regular"
                android:layout_gravity="center" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>