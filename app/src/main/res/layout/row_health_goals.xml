<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_health_goals"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="4dp"
    android:background="@drawable/bg_gray_border_transperent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_health_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:src="@drawable/icon_feather_clock" />

    <TextView
        android:id="@+id/tv_health_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:fontFamily="@font/dmsans_regular"
        android:text="Male"
        android:textColor="@color/txt_color_header"
        android:textSize="16sp" />

</LinearLayout>
