<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/roundedcornerbutton"
        android:backgroundTint="@color/buttoncolorvc"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/txt_title_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="16dp"
            android:fontFamily="@font/dmsans_bold"
            android:text="Daily Check"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_extralarge" />

        <TextView
            android:id="@+id/txt_title_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:fontFamily="@font/dmsans_regular"
            android:text="Thu . 07 April . 00:01 pm"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_small" />

        <RelativeLayout
            android:id="@+id/rl_main_feeling"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/toproundedvoicescan"
            android:backgroundTint="#F9DB84"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt_title_feeling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="16dp"
                android:fontFamily="@font/dmsans_bold"
                android:text="I am feeling..."
                android:textColor="@color/txt_color_header"
                android:textSize="@dimen/textsize_extralarge" />

        </RelativeLayout>

        <!--Sad-->

        <RelativeLayout
            android:id="@+id/rl_main_feeling_sad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:background="@drawable/toproundedvoicescan"
            android:backgroundTint="#EFF0F6"
            android:orientation="vertical"
            android:visibility="visible">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">
            <TextView
                android:id="@+id/txt_title_feeling_sad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="16dp"
                android:fontFamily="@font/dmsans_bold"
                android:text="Sad"
                android:textColor="@color/txt_color_header"
                android:textSize="@dimen/textsize_extralarge" />

            <ImageView
                android:layout_width="50dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/vociesscan_sad"
                android:layout_marginEnd="50dp"
                android:layout_centerVertical="true"
                android:layout_height="50dp"/>
            </RelativeLayout>
        </RelativeLayout>


        <!--stressed-->
        <RelativeLayout
            android:id="@+id/rl_main_feeling_stressed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:background="@drawable/toproundedvoicescan"
            android:backgroundTint="#C5DEF9"
            android:orientation="vertical"
            android:visibility="visible">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <TextView
                    android:id="@+id/txt_title_feeling_stressed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="Stressed"
                    android:textColor="@color/txt_color_header"
                    android:textSize="@dimen/textsize_extralarge" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/voicescan_stressed"
                    android:layout_marginEnd="50dp"
                    android:layout_centerVertical="true"
                    android:layout_height="50dp"/>
            </RelativeLayout>
        </RelativeLayout>

        <!--unsure-->
        <RelativeLayout
            android:id="@+id/rl_main_feeling_unsure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="300dp"
            android:background="@drawable/toproundedvoicescan"
            android:backgroundTint="#A6E0CE"
            android:orientation="vertical"
            android:visibility="visible">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <TextView
                    android:id="@+id/txt_title_feeling_unsure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="Unsure"
                    android:textColor="@color/txt_color_header"
                    android:textSize="@dimen/textsize_extralarge" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/voicescan_unsure"
                    android:layout_marginEnd="50dp"
                    android:layout_centerVertical="true"
                    android:layout_height="50dp"/>
            </RelativeLayout>
        </RelativeLayout>


        <!--Relaxed-->
        <RelativeLayout
            android:id="@+id/rl_main_feeling_relaxed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="400dp"
            android:background="@drawable/toproundedvoicescan"
            android:backgroundTint="#D5C6ED"
            android:orientation="vertical"
            android:visibility="visible">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <TextView
                    android:id="@+id/txt_title_feeling_relaxed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="Relaxed"
                    android:textColor="@color/txt_color_header"
                    android:textSize="@dimen/textsize_extralarge" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/voicescan_relaxed"
                    android:layout_marginEnd="50dp"
                    android:layout_centerVertical="true"
                    android:layout_height="50dp"/>
            </RelativeLayout>
        </RelativeLayout>

        <!--Happy-->
        <RelativeLayout
            android:id="@+id/rl_main_feeling_happy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="500dp"
            android:background="@drawable/roundedcornerbutton"
            android:backgroundTint="#F7E6B7"
            android:orientation="vertical"
            android:visibility="visible">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <TextView
                    android:id="@+id/txt_title_feeling_happy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="Happy"
                    android:textColor="@color/txt_color_header"
                    android:textSize="@dimen/textsize_extralarge" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/voicescan_happy"
                    android:layout_marginEnd="50dp"
                    android:layout_centerVertical="true"
                    android:layout_height="50dp"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>