<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/roundedcornerbutton"
        android:backgroundTint="@color/buttoncolorvc"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rl_main_feeling"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/roundedcornerbutton"
            android:backgroundTint="#F9DB84"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt_title_feeling_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="16dp"
                android:fontFamily="@font/dmsans_bold"
                android:text="Prepare to record today’s topic"
                android:textColor="@color/txt_color_header"
                android:textSize="@dimen/textsize_extralarge" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_main_feeling_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:background="@drawable/toproundedvoicescan_sad"
            android:backgroundTint="#F7E6B7"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/img_record_feeling_woman" />

                <TextView
                    android:id="@+id/txt_title_feeling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_margin="16dp"
                    android:fontFamily="@font/dmsans_bold"
                    android:text="Unsure"
                    android:textColor="@color/txt_color_header"
                    android:textSize="@dimen/textsize_extralarge"
                    android:visibility="invisible" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_title_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="16dp"
            android:fontFamily="@font/dmsans_bold"
            android:text="Daily Check"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_extralarge" />

        <TextView
            android:id="@+id/txt_title_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:fontFamily="@font/dmsans_regular"
            android:text="Thu . 07 April . 00:01 pm"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_small" />


        <TextView
            android:id="@+id/txt_describe_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_main_feeling_1"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:fontFamily="@font/dmsans_bold"
            android:text="Describe your perfect day"
            android:textColor="@color/txt_color_header"
            android:textSize="@dimen/textsize_medium" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/tv_get_different_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableStart="@drawable/repeat"
            android:drawablePadding="10dp"
            android:fontFamily="@font/dmsans_regular"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="Get a different topic"
            android:textColor="@color/txt_color_header"
            android:textSize="@dimen/textsize_large" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal">

        <RadioButton
            android:id="@+id/radio_use_my_own_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_regular"
            android:gravity="center"
            android:text="I’ll use my own topic"
            android:textColor="@color/txt_color_header"
            android:textSize="@dimen/textsize_large" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_relationship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/dmsans_regular"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="Remember to find a quiet place \nto record your 30 seconds "
            android:textColor="#6E7191"
            android:textSize="@dimen/textsize_medium" />

    </RelativeLayout>

</LinearLayout>