<!-- res/layout/grid_item.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="7dp"
    app:cardCornerRadius="@dimen/textsize_large"
    android:background="@color/white"
    android:padding="0dp">


    <RelativeLayout
        android:id="@+id/rl_main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">







        <ImageView
            android:id="@+id/item_image"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_readtime" />
        <TextView
            android:id="@+id/txt_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/dmsans_bold"
            android:gravity="center"
            android:visibility="visible"
            android:text="Positivity"
            android:layout_alignParentBottom="true"
            android:textColor="@color/txt_color_header"
            android:layout_margin="1dp"
            android:minLines="2"
            android:maxLines="2"
            android:layout_below="@+id/item_image"
            android:background="@drawable/roundedcornerbottomshape"
            android:textSize="@dimen/textsize_medium" />

    </RelativeLayout>
    <ImageView
        android:id="@+id/favorite_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:layout_gravity="end"
        android:visibility="gone"
        android:src="@drawable/favstarsolid" />
</androidx.cardview.widget.CardView>
