<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:background="@android:color/transparent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- RelativeLayout to position the star icon and dialog content -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedcornerbutton"
        android:padding="20dp"
        android:layout_margin="40dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Star Icon Positioned Half Above the Dialog -->
        <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"
        android:adjustViewBounds="true" />

        <!-- Main Content of the Dialog -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/dialog_icon"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/dialog_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/voicescan_dialog"
            android:layout_gravity="center" />

            <TextView
                android:id="@+id/dialog_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please find a quiet and \ncomfortable place \nbefore starting"
                android:textColor="#000"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="@dimen/textsize_medium"
                android:fontFamily="@font/dmsans_regular"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/dialog_button"
                android:layout_width="166dp"
                android:layout_height="36dp"
                android:text="Next Step"
                android:backgroundTint="#FFD700"
                android:textSize="@dimen/textsize_small"
                android:textColor="#FFF"
                 />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>


