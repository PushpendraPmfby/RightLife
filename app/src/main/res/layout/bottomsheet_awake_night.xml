<!-- res/layout/bottom_sheet_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/design_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:padding="16dp"
    android:background="@drawable/toproundedcornershape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/dmsans_bold"
        android:gravity="center"
        android:text="Do these keep you awake at night?"
        android:textColor="@color/txt_color_header"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnNO"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="20dp"
            android:text="No"
            android:textSize="16sp"
            android:fontFamily="@font/dmsans_bold"
            android:textColor="@color/black"
            android:backgroundTint="@color/color_bg_button_affirmed" />

        <Button
            android:id="@+id/btnYes"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:text="Yes"
            android:layout_weight="1"
            android:textSize="16sp"
            android:fontFamily="@font/dmsans_bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/menuselected" />

    </LinearLayout>
</LinearLayout>
