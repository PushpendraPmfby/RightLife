<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

  <ImageView
            android:id="@+id/ic_back_dialog"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_leftarrow" />

        <TextView
            android:id="@+id/tv_header_htw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/dmsans_bold"
            android:text="Contact Us"
            android:textSize="@dimen/textsize_medium" />

        <com.zhpan.indicator.IndicatorView
            android:id="@+id/indicator_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_header_htw"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/textsize_medium"
            app:vpi_slide_mode="smooth"
            app:vpi_slider_checked_color="#A0A3BD"
            app:vpi_slider_normal_color="#EFF0F6"
            app:vpi_style="round_rect" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_regular"
            android:text="Write us a message in case you need to talk with our team and we will be back to you as soon as possible"
            android:textSize="@dimen/textsize_medium" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_regular"
            android:layout_marginTop="16dp"
            android:text="Name"
            android:textSize="@dimen/textsize_medium" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:hint="Your Name"
            android:background="@drawable/roundedcornerbutton"
            android:backgroundTint="@color/bg_edittext"
            android:inputType="textPersonName"
            android:imeOptions="actionNext"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_regular"
            android:layout_marginTop="16dp"
            android:text="Email"
            android:textSize="@dimen/textsize_medium" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:hint="Your Email"
            android:background="@drawable/roundedcornerbutton"
            android:backgroundTint="@color/bg_edittext"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_regular"
            android:layout_marginTop="16dp"
            android:text="Phone Number"
            android:textSize="@dimen/textsize_medium" />

        <EditText
            android:id="@+id/edt_phone_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:maxLength="10"
            android:hint="Your Phone Number"
            android:background="@drawable/roundedcornerbutton"
            android:backgroundTint="@color/bg_edittext"
            android:inputType="phone"
            android:imeOptions="actionNext"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_motive_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_regular"
            android:layout_marginTop="16dp"
            android:text="Motive to Contact"
            android:textSize="@dimen/textsize_medium" />

        <EditText
            android:id="@+id/edt_motive_contact"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/roundedcornerbutton"
            android:backgroundTint="@color/bg_edittext"
            android:editable="true"
            android:hint="Select an Option"
            android:imeOptions="actionNext"
            android:focusable="false"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/icon_arrow_article"/>

        <TextView
            android:id="@+id/tv_your_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_regular"
            android:layout_marginTop="16dp"
            android:text="Your Message"
            android:textSize="@dimen/textsize_medium" />

        <EditText
            android:id="@+id/edt_your_message"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/roundedcornerbutton"
            android:backgroundTint="@color/bg_edittext"
            android:inputType="text"
            android:gravity="start|top"
            android:imeOptions="actionDone"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_bg_button_affirm"
            android:layout_margin="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="18dp"
            android:drawablePadding="5dp"
            android:text="Send" />

    </LinearLayout>

    </ScrollView>

</LinearLayout>