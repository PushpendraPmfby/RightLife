<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/colorTransperent">

    <ImageView
        android:id="@+id/image_row_unlock_power"
        android:layout_width="110dp"
        android:layout_height="65dp"
        android:src="@drawable/visualise_manifest"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/tv_row_header_unlock_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visualise and Manifest"
            android:textColor="@color/txt_color_header"
            android:textSize="18sp"
            android:fontFamily="@font/dmsans_bold"/>

        <TextView
            android:id="@+id/tv_row_desc_unlock_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visualise and Manifest"
            android:textColor="@color/txt_color_header"
            android:textSize="14sp"
            android:fontFamily="@font/dmsans_regular"/>

    </LinearLayout>

</LinearLayout>